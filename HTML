<rolltemplate class="sheet-rolltemplate-rollCaracteristique">
<div class="rolltemplate1">
    <p><span class="templateNomJoueur">{{nomJoueur}}</span> fait un jet de {{nomJet}}</p>
    <p>{{nomJet}} : {{valeurCarac}}</p>
    <p>Jet :{{dice}}</p>
    {{#rollLess() dice valeurCarac}}
        <p class="reussie">REUSSITE {{#rollWasFumble() dice}}CRITIQUE{{/rollWasFumble() dice}}</p>
    {{/rollLess() dice valeurCarac}}
    
    {{#rollTotal() dice valeurCarac}}
        <p class="reussie">REUSSITE {{#rollWasFumble() dice}}CRITIQUE{{/rollWasFumble() dice}}</p>
    {{/rollTotal() dice valeurCarac}}
    
    {{#rollGreater() dice valeurCarac}}
        <p class="echec">ECHEC {{#rollWasCrit() dice}}CRITIQUE{{/rollWasCrit() dice}}</p>
    {{/rollGreater() dice valeurCarac}}
</div>
</rolltemplate>

